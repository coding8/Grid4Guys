@{
    var start = (Model.PageIndex - 1) * Model.PageSize + 1;
    var mod = Model.TotalRecordCount % Model.PageSize;// 6%5=1,6%4=2
    int end;

    if (mod == 0)
    {
        end = Model.PageIndex * Model.PageSize;
    }
    else
    {
        if (Model.PageIndex == 1)
        {
            end = Model.PageIndex * Model.PageSize; ;
        }
        else
        {
            end = start + mod - 1;
        }
    }

    <text>
        第 @Model.PageIndex 页 共 @Model.TotalPageCount 页 |
        第 @start ~ @end 条记录 共 @Model.TotalRecordCount 条记录
    </text>
}